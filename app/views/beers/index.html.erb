<h1>Listing beers</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Fest order</th>
    <th>Name</th>
    <th>Style</th>
    <th>Year</th>
    <th>Abv</th>
    <th>Ibu</th>
    <th>Srm</th>
    <th>Available</th>
    <th>Tapped at time</th>
    <th>Blown at time</th>
    <th>Description</th>
    <th>Beer url</th>
    <th>Avg rating</th>
    <th>Tried</th>
    <th>Festival</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @beers.each do |beer| %>
  <tr>
    <td><%= beer.id %></td>
    <td><%= beer.fest_order %></td>
    <td><%= beer.name %></td>
    <td><%= beer.style %></td>
    <td><%= beer.year %></td>
    <td><%= beer.abv %></td>
    <td><%= beer.ibu %></td>
    <td><%= beer.srm %></td>
    <td><%= beer.available %></td>
    <td><%= beer.tapped_at_time %></td>
    <td><%= beer.blown_at_time %></td>
    <td><%= beer.description %></td>
    <td><%= beer.beer_url %></td>
    <td><%= beer.avg_rating %></td>
    <td><%= beer.tried %></td>
    <td><%= beer.festival %></td>
    <td><%= link_to 'Show', beer %></td>
    <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
    <td><%= link_to 'Destroy', beer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

